doctype html
html(lang="en")
    head
        title Account
        script(src='//www.parsecdn.com/js/parse-1.6.7.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
        script(src='/javascripts/account.js')
        script(src='https://apis.google.com/js/client.js?onload=handleClientLoad')

    body
        div
            | User Name:
            input#userName(type='text' name='username')
            br
            br
            | Password:
            input#password(type='text' name='password')

        br
        div
            button(onclick='signup()') Sign up
            button(onclick='login()') Log in
            button(onclick='logout()') Log out

        br
        div
            | Status:
            p#status You are NOT logged in
        br

        ol#workSpaceList

        input#workSpaceId(type='text' name='workSpaceId' placeholder="Work Space Id")
        button(onclick='saveWorkSpace()') Save Work Space


