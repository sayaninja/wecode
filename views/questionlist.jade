doctype html
html
    head
        title Question List
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/stylesheets/question.css')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        script(src='//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.22/require.min.js', data-main='javascripts/question')
    body
        include questionform
        include similarquestions
        .container#questioncontainer
            .navbar.navbar-default.navbar-fixed-top
                a(href="/").navbar-brand WeCode
            .row#questioncontent
                .col-md-offset-2.col-md-8#questions
                    #questionHeader Questions List
                    br
                    ol#questionList
                    br
                    button#questionAddButton.btn.btn-success(type='button') Add Question